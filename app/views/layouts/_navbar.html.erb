<% unless request.fullpath.match?( 'login' ) %>
    <div id="login-status">
        <% if logged_in? %>
            <%= "Logged in as #{ current_user.username }" %>
        <% else %>
            <%= link_to "Client login", login_path %>
        <% end %>
        <%= " | " if logged_in? %>
        <%= link_to "My profile", user_path( current_user ) if logged_in? %>
        <%= " | " if logged_in? %>
        <%= link_to "Log out", logout_path, method: "delete", data: { confirm: "Are you sure?" } if logged_in? %>
    </div>
<% end %>